            <text class="unit">起/次</text>
          </view>
          <view class="service-count">已接8604单</view>
        </view>
      </view>

      <!-- 其他 -->
      <view class="service-item">
        <image src="/static/images/categories/construction.jpg" mode="aspectFill"></image>
        <view class="service-info">
          <view class="service-title">其他</view>
          <view class="service-price">
            <text class="price">¥800</text>
            <text class="unit">起/次</text>
          </view>
          <view class="service-count">已接2021单</view>
        </view>
      </view>
    </view>
  </view>
