<view class="container">
  <!-- 航拍导航栏 -->
  <view class="nav-header">
    <view class="nav-title">航拍 ▼</view>
    <view class="nav-more">更多 ></view>
  </view>

  <!-- 顶部服务展示区 -->
  <view class="top-section">
    <!-- 左侧大图 -->
    <view class="main-card">
      <image src="/static/images/services/team-building.jpg" mode="aspectFill"></image>
      <view class="card-info">
        <view class="card-title">团建拓展</view>
        <view class="card-desc">查看更多 ></view>
      </view>
    </view>
    <!-- 右侧两个小卡片 -->
    <view class="side-cards">
      <view class="side-card">
        <image src="/static/images/services/sports-meeting.jpg" mode="aspectFill"></image>
