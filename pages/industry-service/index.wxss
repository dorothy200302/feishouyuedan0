.container {
  padding: 30rpx;
  background: #f7f8fa;
}

/* 航拍导航栏 */
.nav-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
}

.nav-header .title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 44rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.nav-more {
  font-size: 28rpx;
  color: #999;
}

/* 顶部服务展示区 */
.top-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.main-card {
  flex: 2;
  position: relative;
  height: 360rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.side-cards {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.side-card {
  flex: 1;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.main-card image,
.side-card image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-info {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  color: #fff;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.card-desc {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

/* 中间区域 */
.middle-section {
  margin-bottom: 30rpx;
}

.data-section {
  position: relative;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  height: 300rpx;
}

.data-section image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.pdf-tag {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  background: #ff4d4f;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  z-index: 1;
}

.apply-cards {
  display: flex;
  gap: 20rpx;
}

.apply-card {
  flex: 1;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.apply-content {
  flex: 1;
}

.apply-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.apply-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.apply-btn {
  display: inline-block;
  font-size: 26rpx;
  color: #ff6b00;
}

.apply-icon {
  font-size: 48rpx;
  margin-left: 20rpx;
}

/* 优秀服务商区域 */
.merchant-section {
  margin-bottom: 30rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.scroll-tip {
  font-size: 28rpx;
  color: #999;
}

.merchant-scroll {
  white-space: nowrap;
}

.merchant-item {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.merchant-item:last-child {
  margin-right: 0;
}

.merchant-item image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 服务内容列表 */
.service-list {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.title-wrap {
  display: flex;
  align-items: center;
}

.count {
  font-size: 28rpx;
  color: #999;
  font-weight: normal;
  margin-left: 8rpx;
}

.filter {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.service-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.service-item image {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
}

.service-info {
  padding: 20rpx;
}

.service-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.service-price {
  margin-bottom: 12rpx;
}

.price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.service-count {
  font-size: 24rpx;
  color: #999;
} 