<!--pages/about/index.wxml-->
<view class="container">
  <view class="logo-section">
    <view class="logo-wrapper">
      <van-icon name="shop" size="80rpx" color="#FF6B00" />
    </view>
    <view class="app-name">飞手约单</view>
    <view class="version">Version {{version}}</view>
  </view>

  <view class="info-section">
    <view class="info-group">
      <view class="info-item" bindtap="onPrivacyTap">
        <text>隐私政策</text>
        <van-icon name="arrow" color="#999" size="32rpx" />
      </view>
      <view class="info-item" bindtap="onServiceTap">
        <text>服务协议</text>
        <van-icon name="arrow" color="#999" size="32rpx" />
      </view>
      <view class="info-item" bindtap="onContactTap">
        <text>联系我们</text>
        <van-icon name="arrow" color="#999" size="32rpx" />
      </view>
    </view>
  </view>

  <view class="copyright">
    <text>Copyright © 2024 飞手约单</text>
    <text>All Rights Reserved</text>
  </view>
</view> 