.container {
  min-height: 100vh;
  background: #f7f8fa;
}

.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
}

.section {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.section-header .clear {
  margin-left: auto;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.section-header .clear van-icon {
  margin-right: 4rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  margin: 0 20rpx 20rpx 0;
}

.search-result {
  padding: 20rpx;
}

.result-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.result-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.result-item .info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.result-item .title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.result-item .desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.result-item .meta {
  margin-top: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.result-item .type {
  font-size: 24rpx;
  color: #1890ff;
  background: rgba(24,144,255,0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.result-item .price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
} 