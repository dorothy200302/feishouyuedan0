.container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 顶部搜索区域 */
.header {
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 分类导航 */
.category-nav {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
}

/* 圆形导航栏 */
.nav-grid {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.nav-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.nav-item text {
  font-size: 24rpx;
  color: #333;
}

/* 考执照广告 */
.license-section {
  margin: 20rpx;
  height: 300rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
}

.license-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.license-content .title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.license-content .subtitle {
  font-size: 28rpx;
  color: #666;
}

.license-content .location {
  font-size: 24rpx;
  color: #999;
}

.license-content .distance {
  font-size: 24rpx;
  color: #999;
}

/* 轮播图 */
.banner-section {
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  height: 200rpx;
}

.banner-section image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 推荐课程 */
.course-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-header .provider {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

.section-header .more {
  margin-left: auto;
  font-size: 24rpx;
  color: #999;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.course-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.course-image {
  width: 240rpx;
  height: 160rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.course-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.provider-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.provider-logo {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.provider-info text {
  font-size: 24rpx;
  color: #666;
}

.student-count {
  font-size: 24rpx;
  color: #999;
}

.course-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  background: #ff6b00;
  color: #fff;
  align-self: flex-start;
  margin-top: 16rpx;
}

.course-tag.free {
  background: #52c41a;
}

.course-provider {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.course-provider text {
  font-size: 26rpx;
  color: #666;
}

.course-lessons {
  background: #fafafa;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.lesson {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 0;
}

.course-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.students {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.students van-icon {
  margin-right: 8rpx;
} 