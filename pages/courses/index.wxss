.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 顶部搜索区域 */
.header {
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 分类导航 */
.category-nav {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
}

/* 课程列表 */
.course-list {
  padding: 20rpx;
}

.course-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.course-image {
  width: 100%;
  height: 300rpx;
}

.course-info {
  padding: 20rpx;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.course-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.course-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: #f5222d;
  background: #fff1f0;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-left: 12rpx;
}

.course-provider {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.provider-logo {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.course-provider text {
  font-size: 26rpx;
  color: #666;
}

.course-lessons {
  background: #fafafa;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.lesson {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 0;
}

.course-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.students {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.students van-icon {
  margin-right: 8rpx;
} 