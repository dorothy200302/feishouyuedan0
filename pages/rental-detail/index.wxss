.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

/* 设备图片 */
.device-images {
  width: 100%;
  height: 500rpx;
  background: #fff;
}

.device-images swiper {
  width: 100%;
  height: 100%;
}

.device-images image {
  width: 100%;
  height: 100%;
}

/* 设备信息 */
.device-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.device-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.device-price {
  text-align: right;
}

.device-price .price {
  font-size: 36rpx;
  color: #FF6B00;
  font-weight: bold;
}

.device-price .unit {
  font-size: 24rpx;
  color: #999;
}

.device-specs {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.device-terms {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.term-item {
  text-align: center;
}

.term-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.term-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 设备详情 */
.detail-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
}

.detail-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #999;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 租赁须知 */
.notice-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.notice-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.notice-item van-icon {
  margin-right: 16rpx;
}

.notice-item text {
  font-size: 28rpx;
  color: #333;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.contact-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.contact-btn text {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.action-btns {
  flex: 1;
} 