.container {
  background: #f7f8fa;
  min-height: 100vh;
}

.order-list {
  padding: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-type {
  color: #666;
  font-size: 28rpx;
}

.order-status {
  color: #FF6B00;
  font-size: 28rpx;
}

.order-content {
  display: flex;
  padding: 20rpx 0;
}

.order-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.order-info {
  flex: 1;
}

.order-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.order-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.order-price {
  color: #FF6B00;
  font-size: 32rpx;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
} 