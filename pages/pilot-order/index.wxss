.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.pilot-list {
  padding: 20rpx;
}

.pilot-item {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  background: #fff;
  overflow: hidden;
}

.pilot-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.pilot-info {
  flex: 1;
}

.pilot-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.pilot-tags {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f0f9ff;
  color: #1890ff;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.experience {
  font-size: 24rpx;
  color: #999;
}

.pilot-location {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.pilot-location van-icon {
  margin-right: 8rpx;
}

.pilot-body {
  padding: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.skill-tags, .cert-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.skill-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: #f6ffed;
  color: #52c41a;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.cert-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: #fff7e6;
  color: #fa8c16;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.stats-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
} 