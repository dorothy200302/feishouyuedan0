.container {
  padding: 40rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.publish-options {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
}

.option-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.option-item text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
} 