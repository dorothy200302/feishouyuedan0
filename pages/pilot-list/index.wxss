.container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 顶部样式 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
}

.location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.location van-icon {
  margin-left: 4rpx;
  color: #666;
}

/* 搜索框样式 */
.van-search {
  flex: 1;
  padding: 0 !important;
}

.van-search__content {
  border: 2rpx solid #ff6b00 !important;
  border-radius: 32rpx !important;
}

/* 推荐区域样式 */
.recommend-section {
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .title {
  display: flex;
  align-items: center;
}

.thumb-icon {
  color: #ff6b00;
  margin-right: 8rpx;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.more {
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.more van-icon {
  margin-left: 4rpx;
}

/* 分类网格样式 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.category-item {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  aspect-ratio: 1.5;
}

.category-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-info {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 16rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
  color: #fff;
}

.category-info .name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
  display: block;
}

.category-info .count {
  font-size: 24rpx;
  opacity: 0.8;
  color: #fff;
}

.pdf-tag {
  position: absolute;
  left: 0;
  top: 0;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 0 0 8rpx 0;
}

/* Banner样式 */
.banner {
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.banner image {
  width: 100%;
  height: auto;
  display: block;
}

/* 筛选条件样式 */
.filter-tabs {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-tabs .tab {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.filter-tabs .tab van-icon {
  margin-left: 4rpx;
  color: #999;
}

/* 飞手列表样式 */
.pilot-list {
  padding: 20rpx;
}

.pilot-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.pilot-avatar {
  margin-right: 20rpx;
}

.pilot-avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.pilot-info {
  flex: 1;
}

.pilot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.pilot-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.profile-btn {
  font-size: 24rpx !important;
  padding: 0 24rpx !important;
  background: #ff6b00 !important;
  border: none !important;
}

.pilot-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.pilot-meta text {
  margin-right: 16rpx;
}

.pilot-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8rpx;
}

.pilot-tags .tag {
  font-size: 22rpx;
  color: #ff6b00;
  background: rgba(255,107,0,0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.pilot-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.pilot-device {
