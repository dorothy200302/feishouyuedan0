.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 顶部导航栏 */
.nav-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.share-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  color: #666;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.share-btn::after {
  display: none;
}

/* 头部信息 */
.header {
  display: flex;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-right: 24rpx;
}

.info {
  flex: 1;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.rating {
  font-size: 32rpx;
  color: #ff9800;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  margin-bottom: 12rpx;
}

.area {
  font-size: 26rpx;
  color: #999;
}

/* 内容区域 */
.section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.intro,
.equipment {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.certificates {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.certificate {
  font-size: 26rpx;
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

.service-types {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.service-type {
  font-size: 26rpx;
  color: #ff6b00;
  background: rgba(255, 107, 0, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

.price-info {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 40rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.unit {
  font-size: 26rpx;
  color: #999;
  margin-left: 8rpx;
}

.service-area {
  font-size: 28rpx;
  color: #666;
}

/* 评价列表 */
.reviews {
  background: #fff;
  padding: 0 30rpx;
}

.review-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.reviewer-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 16rpx;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.review-date {
  font-size: 24rpx;
  color: #999;
}

.review-rating {
  font-size: 28rpx;
  color: #ff9800;
}

.review-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部操作栏 */
.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.contact-btns {
  display: flex;
  gap: 30rpx;
  margin-right: 30rpx;
}

.contact-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  padding: 0;
  line-height: 1.2;
}

.contact-btn::after {
  display: none;
}

.contact-btn text {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.book-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 案例展示样式 */
.case-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.case-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.case-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
} 