.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
}

.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.current-city {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}

.current-city van-icon {
  margin-right: 12rpx;
}

.city-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.city-grid .city-item {
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}

.city-column .city-item {
  height: 88rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.city-column .city-item:last-child {
  border-bottom: none;
}

.index-bar {
  position: fixed;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx 10rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 30rpx 0 0 30rpx;
  z-index: 99;
}

.index-item {
  padding: 8rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
} 